<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" xmlns:di="http://www.omg.org/spec/DD/20100524/DI" xmlns:camunda="http://camunda.org/schema/1.0/bpmn" id="Definitions_1" targetNamespace="http://bpmn.io/schema/bpmn" exporter="Camunda Modeler" exporterVersion="5.0.0">
  <bpmn:process id="job-recruitment-workflow-india" name="Job Recruitment Workflow India" isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_1" name="Job Application Started">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- Step 1: Personal Information -->
    <bpmn:userTask id="PersonalInfoTask" name="Personal Information">
      <bpmn:documentation>Collect basic personal details including name, email, mobile, date of birth, and gender</bpmn:documentation>
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- Step 2: Job Preferences -->
    <bpmn:userTask id="JobPreferencesTask" name="Job Preferences">
      <bpmn:documentation>Collect job preferences including position, salary expectations, and notice period</bpmn:documentation>
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- Step 3: Experience & Education -->
    <bpmn:userTask id="ExperienceEducationTask" name="Experience &amp; Education">
      <bpmn:documentation>Collect professional experience and educational background including skills</bpmn:documentation>
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:outgoing>Flow_4</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- Collect Applicant Data -->
    <bpmn:serviceTask id="CollectApplicantDataTask" name="Collect Applicant Data" camunda:class="com.dynamicworkflow.delegate.CollectApplicantDataDelegate">
      <bpmn:documentation>Collect and format all applicant data for HR review</bpmn:documentation>
      <bpmn:incoming>Flow_4</bpmn:incoming>
      <bpmn:outgoing>Flow_5</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- HR Review Task -->
    <bpmn:userTask id="HRReviewTask" name="HR Application Review" camunda:candidateGroups="hr,managers">
      <bpmn:documentation>Review job application and make selection decision.

Applicant: ${firstName} ${lastName}
Email: ${email}
Position: ${position}
Experience: ${totalExperience} years
Expected CTC: â‚¹${expectedSalaryCTC} LPA

Please review the complete application data and make your decision.</bpmn:documentation>
      <bpmn:extensionElements>
        <camunda:formData>
          <camunda:formField id="hrDecision" label="Decision" type="enum">
            <camunda:value id="accept" name="Accept Application" />
            <camunda:value id="reject" name="Reject Application" />
          </camunda:formField>
          <camunda:formField id="hrComments" label="HR Comments" type="string" />
          <camunda:formField id="interviewRequired" label="Interview Required?" type="boolean" defaultValue="true" />
        </camunda:formData>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_5</bpmn:incoming>
      <bpmn:outgoing>Flow_6</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- HR Decision Gateway -->
    <bpmn:exclusiveGateway id="HRDecisionGateway" name="Application Accepted?">
      <bpmn:incoming>Flow_6</bpmn:incoming>
      <bpmn:outgoing>Flow_7</bpmn:outgoing>
      <bpmn:outgoing>Flow_8</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <!-- Store Application Data -->
    <bpmn:serviceTask id="StoreApplicationTask" name="Store Application Data" camunda:class="com.dynamicworkflow.delegate.StoreApplicationDelegate">
      <bpmn:documentation>Store complete application data and update status to ACCEPTED</bpmn:documentation>
      <bpmn:incoming>Flow_7</bpmn:incoming>
      <bpmn:outgoing>Flow_9</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- Send Rejection Notification -->
    <bpmn:serviceTask id="SendRejectionTask" name="Send Rejection Notification" camunda:class="com.dynamicworkflow.delegate.SendRejectionDelegate">
      <bpmn:documentation>Send rejection notification to applicant</bpmn:documentation>
      <bpmn:incoming>Flow_8</bpmn:incoming>
      <bpmn:outgoing>Flow_10</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- Success End Event -->
    <bpmn:endEvent id="SuccessEndEvent" name="Application Accepted">
      <bpmn:incoming>Flow_9</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Rejection End Event -->
    <bpmn:endEvent id="RejectionEndEvent" name="Application Rejected">
      <bpmn:incoming>Flow_10</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="PersonalInfoTask" />
    <bpmn:sequenceFlow id="Flow_2" sourceRef="PersonalInfoTask" targetRef="JobPreferencesTask" />
    <bpmn:sequenceFlow id="Flow_3" sourceRef="JobPreferencesTask" targetRef="ExperienceEducationTask" />
    <bpmn:sequenceFlow id="Flow_4" sourceRef="ExperienceEducationTask" targetRef="CollectApplicantDataTask" />
    <bpmn:sequenceFlow id="Flow_5" sourceRef="CollectApplicantDataTask" targetRef="HRReviewTask" />
    <bpmn:sequenceFlow id="Flow_6" sourceRef="HRReviewTask" targetRef="HRDecisionGateway" />
    <bpmn:sequenceFlow id="Flow_7" name="Accept" sourceRef="HRDecisionGateway" targetRef="StoreApplicationTask">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">${hrDecision == 'accept'}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_8" name="Reject" sourceRef="HRDecisionGateway" targetRef="SendRejectionTask">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">${hrDecision == 'reject'}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="Flow_9" sourceRef="StoreApplicationTask" targetRef="SuccessEndEvent" />
    <bpmn:sequenceFlow id="Flow_10" sourceRef="SendRejectionTask" targetRef="RejectionEndEvent" />
    
  </bpmn:process>
  
  <!-- BPMN Diagram Layout -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="job-recruitment-workflow-india">
      
      <!-- Start Event -->
      <bpmndi:BPMNShape id="_BPMNShape_StartEvent_2" bpmnElement="StartEvent_1">
        <dc:Bounds x="179" y="99" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="158" y="142" width="78" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Personal Info Task -->
      <bpmndi:BPMNShape id="PersonalInfo_Shape" bpmnElement="PersonalInfoTask">
        <dc:Bounds x="270" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- Job Preferences Task -->
      <bpmndi:BPMNShape id="JobPreferences_Shape" bpmnElement="JobPreferencesTask">
        <dc:Bounds x="420" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- Experience Task -->
      <bpmndi:BPMNShape id="Experience_Shape" bpmnElement="ExperienceEducationTask">
        <dc:Bounds x="570" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- Collect Applicant Data -->
      <bpmndi:BPMNShape id="CollectData_Shape" bpmnElement="CollectApplicantDataTask">
        <dc:Bounds x="720" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- HR Review Task -->
      <bpmndi:BPMNShape id="HRReview_Shape" bpmnElement="HRReviewTask">
        <dc:Bounds x="870" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- HR Decision Gateway -->
      <bpmndi:BPMNShape id="HRDecisionGateway_Shape" bpmnElement="HRDecisionGateway" isMarkerVisible="true">
        <dc:Bounds x="1025" y="92" width="50" height="50" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1008" y="62" width="84" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Store Application -->
      <bpmndi:BPMNShape id="StoreApplication_Shape" bpmnElement="StoreApplicationTask">
        <dc:Bounds x="1130" y="77" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- Send Rejection -->
      <bpmndi:BPMNShape id="SendRejection_Shape" bpmnElement="SendRejectionTask">
        <dc:Bounds x="1130" y="202" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- Success End Event -->
      <bpmndi:BPMNShape id="SuccessEnd_Shape" bpmnElement="SuccessEndEvent">
        <dc:Bounds x="1282" y="99" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1261" y="142" width="78" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Rejection End Event -->
      <bpmndi:BPMNShape id="RejectionEnd_Shape" bpmnElement="RejectionEndEvent">
        <dc:Bounds x="1282" y="224" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1261" y="267" width="78" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Sequence Flow Edges -->
      <bpmndi:BPMNEdge id="Flow_1_di" bpmnElement="Flow_1">
        <di:waypoint x="215" y="117" />
        <di:waypoint x="270" y="117" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_2_di" bpmnElement="Flow_2">
        <di:waypoint x="370" y="117" />
        <di:waypoint x="420" y="117" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_3_di" bpmnElement="Flow_3">
        <di:waypoint x="520" y="117" />
